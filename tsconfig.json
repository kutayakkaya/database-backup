{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "types": [
            "node"
        ],
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ]
}